<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    tools:context=".ui.panel.ui.home.HomeActiveFragment">

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="48sp"
        android:layout_marginRight="24sp"
        android:text="دوره فعال شما"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:transitionName="transition_title_text"
        app:layout_constraintBottom_toTopOf="@+id/home_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="24dp"
        app:cardElevation="20dp"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:padding="6sp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_remaining_days_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="20dp"
                app:contentPadding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_remaining_days_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="۳۷/۹۰"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:transitionName="transition_title_text"

                        app:layout_constraintBottom_toTopOf="@+id/remaining_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/days_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingRight="4sp"
                        android:text="روز"
                        android:textAllCaps="true"
                        android:textColor="@color/gray"
                        android:textSize="16sp"

                        android:transitionName="transition_title_text"
                        app:layout_constraintBottom_toTopOf="@+id/remaining_text"
                        app:layout_constraintEnd_toStartOf="@+id/home_remaining_days_text_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/remaining_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="8sp"
                        android:text="باقی‌مانده"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:transitionName="transition_title_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toStartOf="@+id/home_remaining_days_card_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl">

                    <TextView
                        android:id="@+id/term_start_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:paddingRight="4sp"
                        android:text="آغاز دوره:"
                        android:textAllCaps="true"
                        android:textColor="@color/gray"
                        android:textSize="16sp"

                        android:transitionName="transition_title_text" />

                    <TextView
                        android:id="@+id/term_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingRight="4sp"
                        android:text="۱۳ شهریور ۱۴۰۱"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        android:transitionName="transition_title_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl">

                    <TextView
                        android:id="@+id/term_end_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingRight="4sp"
                        android:text="پایان دوره:"
                        android:textAllCaps="true"
                        android:textColor="@color/gray"
                        android:textSize="16sp"

                        android:transitionName="transition_title_text" />

                    <TextView
                        android:id="@+id/term_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:paddingRight="4sp"
                        android:text="۱۳ خرداد ۱۴۰۱"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp"

                        android:transitionName="transition_title_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_remaining_days_card_view">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/your_consultant_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="8sp"
                        android:text="مشاور شما"
                        android:textAllCaps="true"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:transitionName="transition_title_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/consultant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="8sp"
                        android:text="دکتر محمد جواد جوادی"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:transitionName="transition_title_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:padding="3sp"
                    android:src="@drawable/student" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/study_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6AF3FF"
        android:onClick="goToStudyTimeTab"
        android:paddingHorizontal="60sp"
        android:text="ثبت ساعات مطالعه"
        android:textColor="@color/black"
        android:transitionName="transition_next_btn"
        app:layout_constraintBottom_toTopOf="@+id/extend_term_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_card_view" />


    <Button
        android:id="@+id/extend_term_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:elevation="5dp"
        android:onClick="goToExtendTermTab"
        android:text="تمدید دوره"
        android:textColor="@color/gray"
        android:transitionName="transition_login_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_card_view" />
</androidx.constraintlayout.widget.ConstraintLayout>